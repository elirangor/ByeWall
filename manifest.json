{
  "manifest_version": 3,
  "name": "Page Rewind",
  "version": "2.0",
  "description": "Open archived versions of web pages using Archive.today or the Wayback Machine.",
  "action": {
    "default_title": "Page Rewind",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["tabs", "storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://archive.today/*",
    "https://archive.ph/*",
    "https://web.archive.org/*",
    "https://archive.org/*"
  ],
  "icons": {
    "16": "assets/icon.png",
    "32": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "commands": {
    "open_extension": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Open the Page Rewind popup"
    },
    "archive_current": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Open an archived snapshot of the current page"
    }
  }
}